<?php namespace App\Controllers;

use App\Models\ContactModel;
use Config\Services;

class ContactController extends BaseController
{
    public function index()
    {
        return view('about_page');
    }
    
    public function submit()
    {
        $validation = Services::validation();
        
        $rules = [
            'name' => 'required|min_length[3]',
            'email' => 'required|valid_email',
            'phone' => 'required',
            'message' => 'required|min_length[10]'
        ];
        
        if (!$this->validate($rules)) {
            return redirect()->back()->withInput()->with('errors', $this->validator->getErrors());
        }
        
        $model = new ContactModel();
        $data = [
            'name' => $this->request->getPost('name'),
            'email' => $this->request->getPost('email'),
            'phone' => $this->request->getPost('phone'),
            'message' => $this->request->getPost('message')
        ];
        
        if ($model->saveContact($data)) {
            // Kirim email notifikasi
            $this->sendEmailNotification($data);
            
            return redirect()->back()->with('success', 'Pesan Anda telah terkirim! Kami akan segera menghubungi Anda.');
        }
        
        return redirect()->back()->with('error', 'Gagal mengirim pesan. Silakan coba lagi.');
    }
    
    protected function sendEmailNotification($data)
    {
        $email = Services::email();
        
        $email->setTo('adminAcehobbytown@gmail.com');
        $email->setFrom($data['email'], $data['name']);
        $email->setSubject('Pesan Baru dari ' . $data['name']);
        
        $message = view('email/contact_template', $data);
        $email->setMessage($message);
        
        return $email->send();
    }
// (Remove the duplicate submit method entirely)
}